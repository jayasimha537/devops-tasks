pipeline {
    agent any

    stages {
        stage('Test') {
            steps {
                script{
                    echo 'Hello World'
                    List<String> changes = getChangedFilesList()
                }
            }
        }
    }
}

@NonCPS
List<String> getChangedFilesList(){
    def changedFiles = []
    for ( changeLogSet in currentBuild.changeSets){
        for (file in changeLogSet.getItems()){
            println (file.getPath())
        }
    }

    return changedFiles
}