pipeline {
    agent any

    stages {
        stage('Test') {
            steps {
                script{
                    echo 'Hello World'
                    List<String> changes = getChangedFilesList()
                    println changes
                }
            }
        }
    }
}

@NonCPS
List<String> getChangedFilesList(){
    def changedFiles = []
    for ( changeLogSet in currentBuild.changeSets){
        for (entry in changeLogSet.getItems()){
            changedFiles.addAll(entry.affectedPaths)
        }
    }
    return changedFiles
}